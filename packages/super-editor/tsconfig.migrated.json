{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": true
  },
  "include": [
    "src/types/**/*.d.ts",
    "src/schema/**/*.d.ts",
    "src/core/Attribute.ts",
    "src/core/EventEmitter.ts",
    "src/core/Extension.ts",
    "src/core/Mark.ts",
    "src/core/Node.ts",
    "src/core/OxmlNode.ts",
    "src/core/PresentationEditor.ts",
    "src/core/commands/core-command-map.d.ts",
    "src/core/helpers/getExtensionConfigField.ts",
    "src/core/header-footer/HeaderFooterRegistry.ts",
    "src/core/types/**/*.ts",
    "src/core/utilities/callOrGet.ts",
    "src/extensions/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js",
    "**/*.test.ts",
    "**/*.test.js",
    "src/core/super-converter",
    "src/core/index.ts",
    "src/core/Editor.ts",
    "src/tests"
  ]
}
